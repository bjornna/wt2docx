{
  "name": "wt2docx",
  "version": "1.0.0-rc2",
  "description": "WebTemplate to Asciidoc documentation - a util by Bifrost modified by freshEHR ",
  "main": "lib/index.js",
  "bin": {
    "wt2doc": "lib/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freshehr/wt2doc"
  },
  "keywords": [
    "openEHR",
    "Bifrost",
    "freshehr",
    "asciidoctor"
  ],
  "author": "Ian M<cNicoll <ian@freshehr.com>, Bjørn Næss <bna@dips.no>",
  "license": "ISC",
  "dependencies": {
    "@asciidoctor/core": "^3.0.2",
    "@asciidoctor/docbook-converter": "^3.0.0-beta.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^14.14.7",
    "@types/ora": "^3.2.0",
    "asciidoctor": "^3.0.0",
    "axios": "^1.6.5",
    "node-fetch": "^3.3.2",
    "node-pandoc": "^0.3.0",
    "ora": "^5.1.0",
    "path": "^0.12.7",
    "xmind": "^2.2.33",
    "xmindmark": "^0.3.2",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/yargs": "^15.0.9",
    "jest": "^29.7.0",
    "prettier": "^2.1.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  },
  "files": [
    "lib/**/**"
  ]
}
